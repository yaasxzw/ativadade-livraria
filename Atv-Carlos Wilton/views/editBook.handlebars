<h1>Atualizar Livro</h1>
<form action="/books/edit/{{ book.id }}" method="post" class="form">
    <section class="form-control">
        <label for="autor">Autor:</label>
        <input type="text" name="autor" value="{{ book.autor }}">
    </section>

    <section class="form-control">
        <label for="titulo">Titulo:</label>
        <input type="text" name="titulo" value="{{ book.titulo }}">
    </section>

    <section class="form-control">
        <label for="preco">Pre√ßo:</label>
        <input type="submit" name="preco" value="{{ book.preco }}">
    </section>

    <section class="form-checkbox">
        {{#if book.isCapaDura}}
            <input type="checkbox" name="isCapaDura" checked>
        {{else}}
           <input type="checkbox" name="isCapaDura">
        {{/if}}
        <label for="isCapaDura">Capa dura?</label>
    </section>

    <section class="form-control">
        <input type="submit" value="Atualizar">
    </section>
</form>