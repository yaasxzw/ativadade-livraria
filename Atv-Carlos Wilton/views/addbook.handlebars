<h1>Adicionar Livro</h1>
<form action="/books/create" method="post" class="form">
    <section class="form-control">
        <label for="autor">Autor:</label>
        <input type="text" name="autor" placeholder="Digite o autor do livro">
    </section>

    <section class="form-control">
        <label for="titulo">Titulo:</label>
        <input type="text" name="titulo" placeholder="Digite o titulo do livro">
    </section>

    <section class="form-control">
        <label for="preco">Preço:</label>
        <input type="number" name="preco" placeholder="Digite o preço do livro">
    </section>

    <section class="form-checkbox">
        <input type="checkbox" name="isCapaDura" checked>
        <label for="isCapaDura">Capa dura?</label>
    </section>

    <section class="form-control">
        <input type="submit" value="Cadastrar">
    </section>
</form>